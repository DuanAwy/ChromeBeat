from pyo import *

s = Server().boot()
s.start()
wav = SquareTable()
env = CosTable([(0,0), (100,1), (500,0.3), (3000,1),(5000,0.5),(8191,0)])
met = Metro(.125,6).play()
amp = TrigEnv(met, table=env, mul=.1)
pit = TrigXnoiseMidi(met, dist='loopseg', x1=90, scale=1, mrange=(42,70))
out = Osc(table=wav, freq=pit, mul=amp).out()

time.sleep(8)
s.stop()

print("finished")